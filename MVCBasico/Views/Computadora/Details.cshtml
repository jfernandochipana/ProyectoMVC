@model MVCBasico.Models.Computadora

@{
    ViewData["Title"] = "Detalle";
}

<h2 style="display: none;">Señor @ViewBag.clienteId seleccionó el producto:</h2>

<h1>Especificaciones</h1>

<div>
    <h4>Computadora</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.precio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.precio)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.stock)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.stock)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.procesador)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.procesador)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.memoriaRam)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.memoriaRam)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.lectorDisco)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.lectorDisco)
        </dd>
    </dl>
</div>
<div>
    @* <a asp-action="Edit" asp-route-id="@Model?.ProductoId">Edit</a> *@
    <a asp-controller="Home" asp-action="Pagar" asp-route-id="@Model.ProductoId" asp-route-nombre="@Model?.nombre" asp-route-precio="@Model?.precio" asp-route-clienteId="@ViewBag.clienteId" class="btn btn-primary">Comprar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>
